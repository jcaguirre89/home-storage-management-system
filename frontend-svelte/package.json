{
	"name": "home-storage-system",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:unit:run": "vitest run src/**/*.svelte.test.ts",
		"test:rules": "vitest run --config ./vite.config.ts --environment node src/tests/firestore.rules.test.ts",
		"test:rules:ci": "vitest run --config ./vite.config.ts --environment node --bail src/tests/firestore.rules.test.ts",
		"test:functions": "vitest run --config ./vite.config.ts --environment node src/tests/functions.integration.test.ts",
		"test:functions:ci": "vitest run --config ./vite.config.ts --environment node --bail src/tests/functions.integration.test.ts",
		"test:integration": "npm run test:rules && npm run test:functions",
		"test:integration:ci": "npm run test:rules:ci && npm run test:functions:ci",
		"test": "npm run test:unit:run && npm run test:integration",
		"e2e": "cypress open",
		"e2e:run": "cypress run",
		"test:all": "npm run test && npm run e2e:run",
		"coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@firebase/rules-unit-testing": "^4.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.6",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@vitest/coverage-v8": "^3.1.3",
		"axios": "^1.9.0",
		"cypress": "^14.3.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"firebase": "^11.7.1"
	}
}
